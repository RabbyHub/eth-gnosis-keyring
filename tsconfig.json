{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "outDir": "./dist",
    "strict": true,
    "declaration": true
  },
  "exclude": ["./node_modules", "test", "dist"],
}
